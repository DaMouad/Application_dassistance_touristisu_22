<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stars "
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="23dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Fstars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true"
            tools:layout_editor_absoluteX="0dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/hs1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unclassified" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hs2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hs3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hs4"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hs5"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/Typee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type "
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="121dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Htype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/ht1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riad" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ht2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ht3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Villas" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ht4"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest houses" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ht5"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartments" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ht6"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inns" />
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipments " />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Hequip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true"
            tools:layout_editor_absoluteX="0dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/he1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Parking" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he4"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pool" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he5"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAR" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he6"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pets Allowed" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he7"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free breakfast" />

            <com.google.android.material.chip.Chip
                android:id="@+id/he8"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airpot shuttle" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/hnear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby "
            app:singleSelection="true" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Hnearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/hn1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jemaa elfna" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hn2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koutoubia" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hn3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gueliz" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/HFilter_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FF9454"
            android:text="Apply"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>