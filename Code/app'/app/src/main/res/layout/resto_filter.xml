<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitchen "
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="23dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Rkitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true"
            tools:layout_editor_absoluteX="0dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/rk1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moroccan" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rk2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rk3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mediterranean" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rk4"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="European" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rk5"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarian" />


        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features "
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="23dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/Rfeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:singleSelection="true"
            tools:layout_editor_absoluteX="0dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/rf1"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservations" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rf2"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rf3"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free WI-FI" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rf4"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outdoor seating" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rf5"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meals on site" />

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/RFilter_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FF9454"
            android:text="Apply"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>