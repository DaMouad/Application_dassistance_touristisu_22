<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="392dp"
            android:layout_height="137dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/inika_bold"

                android:text="Your Assistant"

                android:textColor="#FF9D63"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"

                android:layout_marginTop="100dp"
                android:fontFamily="@font/arya_bold"
                android:text="for a better stay"
                android:textColor="#4D1E03"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/toggle_menu"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="328dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:contentDescription="tab"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="340dp"
            android:layout_height="183dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

            <ImageView
                android:id="@+id/elfna"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:contentDescription="@string/elfna"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/elfna" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="393dp"
            android:layout_height="333dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <TextView
                android:id="@+id/categ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/ibm_plex_sans"
                android:text="Categories"
                android:textColor="#220D02"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/hotbtn"
                android:layout_width="157dp"
                android:layout_height="79dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categ">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="157dp"
                    android:layout_height="79dp"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/hotbtn" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Stays"
                    android:textColor="#07062D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/ic_baseline_hotel_24"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"

                android:id="@+id/trbtn"
                android:layout_width="157dp"
                android:layout_height="79dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toEndOf="@+id/attbtn"
                app:layout_constraintTop_toBottomOf="@+id/resbtn">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="157dp"
                    android:layout_height="79dp"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/kech_trans" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Transport"
                    android:textColor="#07062D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/ic_baseline_directions_car_24"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"

                android:id="@+id/attbtn"
                android:layout_width="157dp"
                android:layout_height="79dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotbtn">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="157dp"
                    android:layout_height="79dp"
                    android:alpha="0.7"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/att_kech" />

                <TextView
                    android:id="@+id/text_att"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Attractions"
                    android:textColor="#07062D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/mountain2"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"

                android:id="@+id/resbtn"
                android:layout_width="157dp"
                android:layout_height="79dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toEndOf="@+id/hotbtn"
                app:layout_constraintTop_toBottomOf="@+id/categ">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="157dp"
                    android:layout_height="79dp"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/resbtn" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Restaurants"
                    android:textColor="#07062D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableBottom="@drawable/ic_baseline_restaurant_menu_24"/>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>